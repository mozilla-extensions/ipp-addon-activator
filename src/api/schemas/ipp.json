[
  {
    "namespace": "ippActivator",
    "description": "IPP Activator API",
    "functions": [
      {
        "name": "showMessage",
        "type": "function",
        "description": "Show a message using the browser notification box. Accepts a string or an array of parts to render (with optional strong modifier).",
        "async": true,
        "returns": { "type": "string" },
        "parameters": [
          {
            "name": "message",
            "description": "String label or array of {text, modifier} parts.",
            "choices": [
              { "type": "string" },
              {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "text": { "type": "string" },
                    "modifier": {
                      "type": "array",
                      "optional": true,
                      "items": { "type": "string", "enum": ["strong"] }
                    }
                  },
                  "required": ["text"]
                }
              }
            ]
          }
        ]
      },
      {
        "name": "isTesting",
        "type": "function",
        "description": "Return whether we are running in testing mode.",
        "async": true,
        "returns": { "type": "boolean" },
        "parameters": []
      },
      {
        "name": "isIPPActive",
        "type": "function",
        "description": "Return whether IPP connection is active.",
        "async": true,
        "returns": { "type": "boolean" },
        "parameters": []
      },
      {
        "name": "getDynamicBreakages",
        "type": "function",
        "description": "Return dynamic breakages configured via preference.",
        "async": true,
        "returns": { "type": "array", "items": { "type": "object" } },
        "parameters": []
      },
      {
        "name": "getBaseDomainFromURL",
        "type": "function",
        "description": "Return the eTLD+1 (registrable domain) for the given URL.",
        "async": true,
        "parameters": [
          {
            "name": "url",
            "type": "string",
            "description": "The URL whose base domain is requested."
          }
        ],
        "returns": { "type": "string" }
      }
    ],
    "events": [
      {
        "name": "onIPPActivated",
        "type": "function",
        "description": "Fired when IPProtectionService dispatches 'IPProtectionService:Started'.",
        "parameters": [
          {
            "name": "listener",
            "type": "function",
            "parameters": [
              {
                "name": "details",
                "type": "object",
                "optional": true,
                "properties": {}
              }
            ]
          }
        ]
      },
      {
        "name": "onDynamicBreakagesUpdated",
        "type": "function",
        "description": "Fired when dynamic breakages preference changes.",
        "parameters": [
          {
            "name": "listener",
            "type": "function",
            "parameters": [
              {
                "name": "details",
                "type": "object",
                "optional": true,
                "properties": {}
              }
            ]
          }
        ]
      }
    ]
  }
]
