{
  "manifest_version": 3,
  "name": "IPP Add-on Activator",
  "version": "0.0.1",
  "description": "A system add-on to activate IPP in 143",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "ipp-addon-activator@mozilla.com",
      "strict_min_version": "143.0"
    }
  },
  "background": {
    "scripts": ["bg.js"],
    "type": "module"
  },
  "experiment_apis": {
    "ippActivator": {
      "schema": "api/schemas/ipp.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/parent/ext-ipp.js",
        "events": ["startup"],
        "paths": [["ippActivator"]]
      }
    }
  }
}
