{
  "env": {
    "browser": true,
    "es2022": true
  },
  "globals": {
    "browser": "readonly",
    "ChromeUtils": "readonly",
    "ExtensionAPI": "readonly",
    "ExtensionCommon": "readonly",
    "Services": "readonly"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true }],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": { "mocha": true, "node": true }
    }
  ]
}
